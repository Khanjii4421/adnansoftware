SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
JWT_SECRET_KEY=change-this-in-production

# Frontend: set only when deploying frontend separately from backend
# REACT_APP_API_URL=https://your-backend-domain.com/api

# Digi Portal Integration - Automatic Status Sync
# Enable automatic sync from Digi portal (set to 'true' to enable)
DIGI_PORTAL_AUTO_SYNC_ENABLED=false

# Cron schedule for automatic sync (default: every 15 minutes)
# Format: minute hour day month weekday
# Examples: '*/15 * * * *' (every 15 min), '*/30 * * * *' (every 30 min), '0 */1 * * *' (every hour)
DIGI_PORTAL_SYNC_SCHEDULE=*/15 * * * *

# Digi Portal Base URL
DIGI_PORTAL_BASE_URL=https://digi-portal.com/api

# Digi Portal Credentials - Default (for all sellers except Ahsan)
DIGI_PORTAL_USERNAME=your-username
DIGI_PORTAL_PASSWORD=your-password

# Digi Portal Credentials - Ahsan Seller (separate login)
DIGI_PORTAL_AHSAN_USERNAME=ahsan-username
DIGI_PORTAL_AHSAN_PASSWORD=ahsan-password

